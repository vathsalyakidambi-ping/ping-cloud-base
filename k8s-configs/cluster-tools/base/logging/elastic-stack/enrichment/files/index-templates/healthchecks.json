{
  "index_patterns": [
    "healthchecks-*"
  ],
  "template": {
    "settings": {
      "index": {
        "lifecycle": {
          "name": "ping-7-day-retention",
          "rollover_alias": "healthchecks"
        },
        "routing": {
          "allocation": {
            "include": {
              "_tier_preference": null
            }
          }
        },
        "refresh_interval": "5s",
        "number_of_shards": "3",
        "number_of_replicas": "0"
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "message": {
          "type": "text"
        },
        "timestamp": {
          "type": "text"
        }
      }
    }
  }
}